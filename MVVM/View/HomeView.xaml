<UserControl x:Class="TIOWCharGen.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TIOWCharGen.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1600">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Border Width="700"
                    Height="300">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                        <GradientStop Color="#FF5D4EB5" Offset="0.0"/>
                        <GradientStop Color="#FF11043E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,700,300"/>
                </Border.Clip>
                <Grid>
                    <Grid>
                        <TextBlock Text="Select Charachter"
                                   Foreground="White"
                                   FontSize="20"
                                   Margin="20,10,10,0"
                                   HorizontalAlignment="Left"/>
                        <ListBox x:Name="Charachters" Height="120" 
                                 Width="400"
                                 HorizontalAlignment="Left"
                                 Margin="10,45,0,135"
                                 Background="Transparent">
                        </ListBox>
                        <Button Content="Select"
                                Margin="434,45,216,235"
                                Style="{StaticResource ButtonThemeSmall}"
                                Command="{Binding }">
                        </Button>
                        <Button Content="Remove"
                                Margin="434,70,216,210"
                                Style="{StaticResource ButtonThemeSmall}">
                        </Button>
                        <Button Content="New"
                                Margin="434,95,216,185"
                                Style="{StaticResource ButtonThemeSmall}">
                        </Button>
                        <Button Content="Import"
                                Margin="434,120,216,160"
                                Style="{StaticResource ButtonThemeSmall}">
                        </Button>
                        <Button Content="Export"
                                Margin="434,145,216,135" 
                                Click="Button_Click"
                                Style="{StaticResource ButtonThemeSmall}">
                        </Button>
                        <Button Content="Copy"
                                Margin="434,170,216,110" 
                                Click="Button_Click"
                                Style="{StaticResource ButtonThemeSmall}">
                        </Button>
                        <ComboBox SelectedIndex="0"
                            HorizontalAlignment="Center" 
                            Margin="0,174,0,0" 
                            VerticalAlignment="Top" 
                            Width="120"
                            
                                  >
                            <ComboBoxItem Content="All Campaings"/>

                        </ComboBox>
                        <Label Content="Filter By Campaign:" HorizontalAlignment="Left" Margin="179,170,0,0" VerticalAlignment="Top"/>
                    </Grid>


                </Grid>


            </Border>


            <Border Width="500"
                    Height="300"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#FF5D4EB5" Offset="0.0"/>
                        <GradientStop Color="#FF11043E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

            </Border>

        </StackPanel>
        <StackPanel >

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel Background="Transparent">
                <TextBlock Text="Stats"
                       Foreground="White"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       Margin="0,10,0,10"/>
            </StackPanel>
            <Grid Height="25"
                        Width="1600"
                  HorizontalAlignment="Left"
                  >
                <Label Content="Weapon Skill"
                           Foreground="White"
                           HorizontalAlignment="Left" Margin="33,0,0,0"/>
                <Label Content="Balastic Skill"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="201,0,0,0"/>
                <Label Content="Strength"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="378,0,0,0"/>
                <Label Content="Toughness"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="536,0,0,0"/>
                <Label Content="Agility"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="716,0,0,0"/>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10"
                        Margin="0,0,0,0">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="WeaponSkill"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="BallisticSkill"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Strenght"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Toughness"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Agility"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>


            </StackPanel>
            <Grid Height="25"
                        Width="1600"
                  HorizontalAlignment="Left"
                  >
                <Label Content="Intelligence"
                           Foreground="White"
                           HorizontalAlignment="Left" Margin="33,0,0,0"/>
                <Label Content="Perception"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="201,0,0,0"/>
                <Label Content="Willpower"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="378,0,0,0"/>
                <Label Content="Fellowship"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="536,0,0,0"/>
                <Label Content="Experience"
                    Foreground="White"
                    HorizontalAlignment="Left" Margin="700,0,0,0"/>
            </Grid>
            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10"
                        Margin="0,0,0,0">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Intellegence"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10"
                        >
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Perception"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Willpower"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="Fellowship"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40"/>
                    </Grid>
                </Border>
                <Border Width="150"
                        Height="150"
                        Background="DarkSlateBlue"
                        CornerRadius="10">
                    <Grid>
                        <Rectangle Stroke="Black"
                                   Height="145"
                                   Width="145"
                                   RadiusX="5"
                                   RadiusY="5"
                                   StrokeThickness="5">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="DarkSlateBlue"/>
                                    <GradientStop Color="#FF5D5380" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="ExpSpent"
                        Content="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Foreground="White" FontWeight="Bold"
                        FontSize="40" Margin="0,10,0,0"/>
                        <Rectangle Width="140" Height="5" Fill="Black" />
                        <Label x:Name="ExpGained"
                            Content="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Foreground="White" FontWeight="Bold"
                            FontSize="40" Margin="0,77,0,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
